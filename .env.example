# ExpenseTracker Environment Configuration
# Copy this file to .env and adjust values for your environment
# .env file is ignored by git for security

# ===========================================
# Application Settings
# ===========================================
APP_ENV=development
APP_DEBUG=true
APP_NAME="Expense Tracker"
APP_URL=http://localhost/expensetracker
APP_TIMEZONE=America/New_York

# Application Path (folder name under htdocs)
# This is used for .htaccess URL rewriting
# Examples: expensetracker, ExpenseTracker, expense-tracker
APP_PATH=expensetracker

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=expense_tracker
DB_USER=root
DB_PASS=

# ===========================================
# Session Configuration
# ===========================================
SESSION_LIFETIME=604800

# ===========================================
# AI Settings (optional)
# ===========================================
AI_CATEGORIZATION_ENABLED=false
AI_API_KEY=
